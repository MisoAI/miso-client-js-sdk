---
dependency: codegen-code
pagination:
  data: workflows
  size: 1
  alias: workflow
permalink: "/ui/{{ workflow }}/codegen/"
workflows:
  - ask
  - explore
  - hybrid-search
  - recommendation
  - search
---

<style>
.codegen-code {
  display: grid;
  grid-template-columns: 1fr 2fr;
}
.codegen-code__options,
.codegen-code__code {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.accordion-header,
pre {
  margin-bottom: 0 !important;
}
.accordion-collapse {
  transition: height 0.1s ease-in-out;
}
</style>
<div id="root" class="codegen-code">
  <div class="codegen-code__options" data-role="options">
    <section>
      <h2>Presets</h2>
      <miso-codegen-presets></miso-codegen-presets>
    </section>
    <section>
      <h2>Features</h2>
      <div class="codegen-code__options__features" data-role="features">
      </div>
    </section>
  </div>
  <div class="codegen-code__code" data-role="code">
  </div>
</div>
